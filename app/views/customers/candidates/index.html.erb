<div class="container">
	<div class="row">
		<div class="col-12 center-items">
			<h1>All Candidates</h1>
		</div>
    <div class="col-md-4">
      <%= form_with url: customers_candidates_path, local: true, method: :get do |f| %>
        <h1>Search by Title</h1>
        <div class="input-group">
          <%= f.text_field :title, placeholder: 'Title', class: 'form-input' %>
        </div> 
        <div class="flex-items-between">
          <%= f.submit 'Submit', class: 'btn btn-success btn-wide' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <%= form_with url: customers_candidates_path, local: true, method: :get do |f| %>
        <h1>Search by Email</h1>
        <div class="input-group">
          <%= f.text_field :contact_email, placeholder: 'Email', class: 'form-input' %>
        </div> 
        <div class="flex-items-between">
          <%= f.submit 'Submit', class: 'btn btn-success btn-wide' %>
        </div>
      <% end %>
    </div>
	</div>
	<div  class="row">
		<%= render 'candidates', candidates: @candidates %>
	</div>
</div>