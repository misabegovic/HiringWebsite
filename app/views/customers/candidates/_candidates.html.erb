<% candidates.each do |candidate| %>
	<div class="col-4-lg col-4-md col-12-sm">
		<p><%= candidate.contact_email%></p>
		<%= simple_format candidate.description %>
		<h4>Vacancies: <%= candidate.vacancies%></h4>
		<h4>Employees: <%= candidate.employees%></h4>
		<%= link_to 'Show Profile', customers_candidate_path(candidate.id)%>
	</div>
<%end%>