<% profiles.each do |profile| %>
	<div class="col-md-3 phone-card">
		<div class="phone-card__title">
			<h3><%= profile.title %></h3>
		</div>
		<div class="phone-card__summary">
			<p>Employees: <%= profile.employees %></p>
			<p>Job Offers: <%= profile.offers.length %></p>
		</div>
		<div class="phone-card__title">
			<%= link_to 'Show Profile', customers_profile_path(profile.id)%>
		</div>
	</div>
<%end%>