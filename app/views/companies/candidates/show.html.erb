<div class="container">
  <% if @candidates_fascade.has_properties? %>
    <div class="row">
      <div class="col-12 center-items">
        <h1><%= @candidates_fascade.customer.full_name %></h1>
      </div>
      <div class="col-5 col-offset-1">
        <p>Email: <%= @candidates_fascade.customer.email %></p>
        <h4>Skills: <%= @candidates_fascade.customer.skills %></h4>
        <% if @candidates_fascade.has_motivation_letter? %>
          <h4>Motivation Letter</h4>
          <%= simple_format @candidates_fascade.customer.motivation_letter %>
        <%end%>
        <% if @candidates_fascade.has_experience? %>
          <h4>Experience</h4>
          <%= simple_format @candidates_fascade.customer.experience %>
        <%end%>
      </div>
      <div class="col-5 col-offset-1">
        <h4>This User applied to <%= @candidates_fascade.number_of_applications %> Job Offers</h4>
        <div class="margin-top-add">
          <%= render 'offers', offers: @candidates_fascade.customer_applications %>
        </div>
      </div>
    </div>
  <%else%>
    <div class="row">
      <div class="col-12">
        <h1>This Customer need to update account before being visible.</h1>
      </div>
    </div>
  <%end%>
</div>